<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorAccent</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="MyAppearance" parent="TextAppearance.AppCompat">
        <!--<item name="android:textColor">@color/colorWhite</item>-->
    </style>

    <style name="color" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorTint</item>
        <item name="android:textColorHint">@color/colorTint</item>
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorTint</item>
        <item name="colorControlNormal">@color/colorTint</item>
        <item name="colorControlActivated">@color/colorTint</item>
        <item name="android:textColorHighlight">@color/colorTint</item>
        <item name="android:textColorLink">@color/colorTint</item>
    </style>
    <style name="colorblack" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorBlack</item>
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorBlack</item>
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorBlack</item>
        <item name="android:textColorHighlight">@color/colorBlack</item>
        <item name="android:textColorLink">@color/colorBlack</item>
    </style>

    <style name="AppTheme.Drawer" parent="AppTheme">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
